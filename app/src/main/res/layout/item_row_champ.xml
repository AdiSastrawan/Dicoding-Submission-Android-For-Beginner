<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
    >

        <ImageView
            android:id="@+id/img_champ"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ahri" />

    <TextView
        android:id="@+id/tv_champ_name"
        style="@style/TextContent.Headline.Title"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_champ_desc"
        app:layout_constraintStart_toEndOf="@+id/img_champ"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ahri" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gold_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_champ_desc" />

    <TextView
        android:id="@+id/tv_champ_desc"
        style="@style/TextContent.Paragraph"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="@+id/img_champ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_champ_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_champ_name"
        tools:text="Innately connected to the magic of the spirit realm, Ahri is a fox-like vastaya who can manipulate her prey's emotions and consume their essenceâ€”receiving flashes of their memory and insight from each soul she consumes. Once a powerful yet wayward predator, Ahri is now traveling the world in search of remnants of her ancestors while also trying to replace her stolen memories with ones of her own making." />
    </androidx.constraintlayout.widget.ConstraintLayout>

